<div class="container">
  <h1><%= @comic.title %></h1>
</div>
<div class="card">
  <div class="card-body">
    <h5 class="card-title">Descrição:</h5>
    <p class="card-text"></p>
  </div>
</div>

<div class="container" >
  <% @pages.each do |page| %>
    <%= link_to " pag ##{page.id}", comic_page_path(@comic, page) %>
  <% end %>
</div>

<% if user_signed_in? %>
  <div class="container">
    <%= link_to 'New Page', new_comic_page_path(@comic), class: 'btn btn-secondary'%>
  </div>

  <div class="container" >
    <div class="card" style='margin-top: 5px;'>
        <div class="card-body">
          <%= link_to 'Edit', edit_comic_path, class: 'btn btn-secondary' %>
          <%= link_to 'Delete', @comic , method: 'delete', class: 'btn btn-secondary' %>
        </div>
      </div>
  </div>
<% end %>